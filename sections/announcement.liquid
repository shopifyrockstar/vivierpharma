      {{ target_referrer_attribute }}
      {%- comment -%}
        {%- if target_device_enable -%}
          data-target-device="true"
        {%- endif -%}
      {%- endcomment -%}
      {%- if classes != '' -%}
        class="{{ classes }}"
      {%- endif -%}
      {{ block.shopify_attributes }}
