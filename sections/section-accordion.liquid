{%- assign animation_anchor = 'accordion--' | append: section.id -%}

<section class="section-accordion {{ section.settings.text_color }} {{ section.settings.bg }}" data-section-id="{{ section.id }}" data-section-type="accordion-single">
  <div class="{{ section.settings.width }}">
    <div class="accordion__wrapper">
      <button 
        class="accordion__title" 
        data-accordion-trigger="{{ animation_anchor }}"
        aria-controls="{{ animation_anchor }}"
        aria-haspopup="true" 
        aria-expanded="false">
        {%- if section.settings.title != blank -%}
          {{ section.settings.title }}
        {%- else -%}
          &nbsp;
        {%- endif -%}
      </button>

      <div class="accordion__body" data-accordion-body id="{{ animation_anchor }}">
        <div class="accordion__grid__wrapper">
          <div class="accordion__grid accordion__grid--{{ section.blocks.size }}">
            {%- for block in section.blocks -%}
              {% capture text_content %}
                <div class="accordion__block-description">
                  {%- if block.settings.title != blank -%}
                    <h3 class="accordion__block-title">
                      {{ block.settings.title }}
                    </h3>
                  {%- endif -%}
    
                  <div class="accordion__block-content">
                    {{ block.settings.text }}
                  </div>
                </div>
              {% endcapture %}
    
              {%- case block.type -%}
                {%- when 'text' -%}
                  <div class="accordion__block" {{ block.shopify_attributes }}>
                    {{ text_content }}
                  </div>
                {%- when 'icon' -%}
                  <div class="accordion__block" {{ block.shopify_attributes }}>
                    <div class="accordion__block-icon">
                      <style>
                        .icon__animated--{{ block.id }} * {
                          stroke: {{ block.settings.icon_color }};
                        }
                      </style>
                      <div class="icon__animated icon__animated--{{ block.id }}"
                      data-aos="svg-dash"
                      data-aos-anchor="#{{ animation_anchor }}"
                      data-aos-delay="500">
                        {% render 'animated-icon', filename: block.settings.icon_name %}
                      </div>
                    </div>
                    {{ text_content }}
                  </div>
                {%- when 'image' -%}
                  <div class="accordion__block" {{ block.shopify_attributes }}>
                    <div class="accordion__block-image">
                      {%- render 'image-fill', img_object: block.settings.image, bg_position: block.settings.bg_position, aspect_ratio: block.settings.aspect_ratio -%}
                    </div>
                    {{ text_content }}
                  </div>
                {%- when 'html' -%}
                  <div class="accordion__block" {{ block.shopify_attributes }}>
                    {{ block.settings.html }}
                  </div>
                {%- else -%}
              {%- endcase -%}
            {%- endfor -%}
    
            {% if section.blocks.size == 0 %}
              <div class="text-center">{{ 'home_page.onboarding.no_content' | t }}</div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>      
  </div>
</section>

