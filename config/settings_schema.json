  {
    "name": "Product grid",
    "settings": [
      {
        "type": "header",
        "content": "Product layout"
      },
      {
        "type": "paragraph",
        "content": "Control how products look when displayed side-by-side in collections and groups of related products."
      },
      {
        "type": "select",
        "id": "collection_text_alignment",
        "label": "Text alignment",
        "options": [
          {
            "value": "text-left",
            "label": "Left"
          },
          {
            "value": "text-center",
            "label": "Center"
          },
          {
            "value": "text-right",
            "label": "Right"
          }
        ],
        "default": "text-center"
      },
      {
        "type": "select",
        "id": "product_grid_style",
        "label": "Price hover effect",
        "options": [
          {
            "value": "under",
            "label": "Always show price"
          },
          {
            "value": "hover",
            "label": "Show price on hover"
          }
        ],
        "info": "Price will always show on small devices and phones."
      },
      {
        "type": "checkbox",
        "label": "Show second image on hover",
        "id": "image_hover_enable",
        "default": true
      },
      {
        "type": "header",
        "content": "Image scaling"
      },
      {
        "type": "select",
        "id": "product_grid_image",
        "label": "Scaling style",
        "default": "scale",
        "info": "Fit unenven images into square containers.",
        "options": [
          {
            "value": "crop",
            "label": "Crop images in container"
          },
          {
            "value": "scale",
            "label": "Scale images down to fit container"
          },
          {
            "value": "uneven",
            "label": "No cropping or scaling (uneven grid)"
          }
        ]
      },
      {
        "type": "range",
        "id": "product_grid_aspect_ratio",
        "min": 0.5,
        "max": 1.5,
        "step": 0.1,
        "unit": ":1",
        "label": "Product photo aspect ratio",
        "info": "Wide to tall",
        "default": 1
      },
      {
        "type": "header",
        "content": "Swatches"
      },
      {
        "type": "checkbox",
        "label": "Enable swatches",
        "id": "swatches_enable",
        "info": "Learn more about [color swatches](https:\/\/groupthought.com\/link\/pipeline\/docs\/swatches)",
        "default": true
      },
      {
        "type": "checkbox",
        "label": "Show swatches on collections",
